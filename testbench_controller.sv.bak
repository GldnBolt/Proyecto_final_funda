module testbench_controller();

    logic clk;
    logic reset;

    // Se침ales de control
    logic MemWrite;
    logic [1:0] ALUControl;

    // Instanciaci칩n del controlador
    controller ctrl (
        .clk(clk),
        .reset(reset),
        .MemWrite(MemWrite),
        .ALUControl(ALUControl)
    );

    // Inicializar se침ales
    initial begin
        clk = 0;
        reset = 1;
        #10 reset = 0;
        // Verificar diferentes configuraciones del controlador
    end

    // Generar reloj
    always begin
        clk <= 1; 
        #5; 
        clk <= 0; 
        #5;
    end

    // Verificar las se침ales del controlador
    always @(posedge clk) begin
        if (MemWrite) begin
            $display("MemWrite signal is active.");
        end
        if (ALUControl == 2'b00) begin
            $display("ALUControl is set to ADD.");
        end
    end

endmodule
